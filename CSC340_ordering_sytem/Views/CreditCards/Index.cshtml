@model IEnumerable<CSC340_ordering_sytem.Models.CreditCard>

@{
    ViewBag.Title = "Credit Cards";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xs-6">
        <h2>My Credit Cards</h2>
    </div>
    <div class="col-xs-6 text-right">
        @Html.ActionLink("Add", "Create", null, new { @class = "margin-top-15 btn btn-gold" })
    </div>
</div>

@{
    if (Model.Any())
    {
        <table class="table table-striped">
            <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CardSuffix)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ExpMonth)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ExpYear)
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CardSuffix)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExpMonth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExpYear)
                    </td>
                    <td class="text-right">
                        @Html.ActionLink("Delete", "Delete", new {id = item.Id}, new { @class = "btn btn-sm btn-custom btn-red" })
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <h3 class="text-center">You haven't saved any credit cards yet</h3>
    }
}

@Html.ActionLink("Back to account", "CustomerAccountOverview", "Users")